package com.aliensdecoder;

import android.text.Editable;
import android.text.SpannableStringBuilder;
import android.text.TextWatcher;
import android.widget.EditText;

import unalcol.gui.editor.Tokenizer;

/**
 * Created by jgomez on 2/07/17.
 */

public class SyntaxTextWatcher implements TextWatcher {
    private SyntaxEditText input;

    public SyntaxTextWatcher(SyntaxEditText input, Tokenizer tokenizer, SpanFactory factory){
        this.input = input;
    }

    @Override
    public void afterTextChanged(Editable editable) {}

    @Override
    public void beforeTextChanged(CharSequence s, int start, int count, int after) {}

    @Override
    public void onTextChanged(CharSequence s, int start, int before, int count) {
        input.update(start,before,count);
    }
}
