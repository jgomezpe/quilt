package com.example.jgomez.textedittest;
import android.graphics.Color;
import android.graphics.Typeface;
import android.text.style.ForegroundColorSpan;
import android.text.style.StyleSpan;
import android.text.style.TypefaceSpan;

/**
 * Created by jgomez on 2/07/17.
 */

public class QuiltSpanFactory implements SpanFactory{
    @Override
    public Object[] get(int index){
        switch(index){
            case 0:  return new Object[]{new ForegroundColorSpan(Color.CYAN)};
            case 2:  return new Object[]{new StyleSpan(Typeface.ITALIC),new ForegroundColorSpan(Color.GRAY)};
            case 3:  return new Object[]{new ForegroundColorSpan(Color.BLUE)};
            case 4:  return new Object[]{new ForegroundColorSpan(Color.RED)};
            case 6:  return new Object[]{new StyleSpan(Typeface.BOLD)};
            case 7:  return new Object[]{new ForegroundColorSpan(Color.MAGENTA)};
            default: return new Object[]{new StyleSpan(Typeface.NORMAL)};
        }
    }
}
